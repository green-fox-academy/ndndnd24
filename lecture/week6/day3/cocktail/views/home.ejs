    <% let currentAlcohol = all[i] %>
    <% let currentLink = 'http://localhost:3000' %>
    <% currentLink += currentAlcohol %>
    <a href=<%= currentLink %> <%= all[i] %> </a> <% } %>  -->
    <a href="http://localhost:3000/?alcohol=gin"><%= all[0] %></a>
    <a href="http://localhost:3000/?alcohol=vodka"><%= all[1] %></a>
    <a href="http://localhost:3000/?alcohol=rum"><%= all[2] %></a>
    <a href="http://localhost:3000/?alcohol=tequila"><%= all[3] %></a>
    <table id='menu'>
        <tr>
            <th>name</th>
            <th>price</th>
        </tr>
        <% for (let i = 0; i < cocktail.length; i++) { %>
        <tr>
            <td class="cocktail_main">
                <p class="inline" id="bold">
                    <%= cocktail[i].name %>
                    <% if (cocktail[i].isAlcoholic) { %>
                    <% } else { %>
                    <p class="inline">

                        (non-alcoholic)
                    </p>
                    <% } %>
                </p>
                <p>
                    <% let lastIngredient = 0 %>
                    <% for (let j = 0; j < (cocktail[i].contains.length -1); j++) { %>
                    <%= cocktail[i].contains[j] %>,
                    <% lastIngredient = j %>
                    <% } %>
                    <%= cocktail[i].contains[lastIngredient + 1] %>
                </p>
            </td>
            <td id='price'>
                <%= cocktail[i].price %> Ft
            </td>
        </tr>
        <% } %>

    </table>
</body>

</html>